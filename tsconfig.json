{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "./out",
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules/"
    ]
}